import java.util.Scanner;

public class ShoppingApp {

    public static void main(String[] args) {

        // create a new shopping cart
        ShoppingCart cart = new ShoppingCart();

        // create a scanner object to read user input
        Scanner scanner = new Scanner(System.in);

        // loop until the user chooses to quit
        while (true) {
            System.out.println("Enter an product to add to the cart, or type 'done' to finish shopping:");
            String input = scanner.nextLine();
            if (input.equalsIgnoreCase("done")) {
                break;
            }
            cart.addItem(input);
        }

        // print the items in the cart
        System.out.println("Items in your cart:");
        for (String product : cart.getItems()) {
            System.out.println("- " + product);
        }

        // calculate and print the total cost of the items
        double total = cart.calculateTotal();
        System.out.println("Total cost: $" + String.format("%.2f", total));

        // clear the cart
        cart.clearCart();
        System.out.println("Cart cleared.");
    }
}
